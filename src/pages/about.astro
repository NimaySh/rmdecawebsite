---
import { Carousel } from 'astro-carousel';
import Layout from '~/layouts/PageLayout.astro';
import '~/assets/styles/tailwind.css'; // Import the custom CSS file


const metadata = {
  title: 'About',
};

const images = [
  {
    src: "/assets/images/IMG_1812.jpg",
    alt: "Logo 1",
    format: "webp",
    width: 200,
    height: 200,
    widths: [100, 150, 200],
  },
  {
    src: "/assets/images/IMG_7471.jpg",
    alt: "Logo 2",
    format: "webp",
    width: 200,
    height: 200,
    widths: [100, 150, 200],
  },
  {
    src: "/assets/images/IMG_5712.jpg",
    alt: "Logo 3",
    format: "webp",
    width: 200,
    height: 200,
    widths: [100, 150, 200],
  },
  {
    src: "/assets/images/IMG_4086.jpg",
    alt: "Logo 4",
    format: "webp",
    width: 200,
    height: 200,
    widths: [100, 150, 200],
  },
  {
    src: "/assets/images/IMG_4085.jpg",
    alt: "Logo 5",
    format: "webp",
    width: 200,
    height: 200,
    widths: [100, 150, 200],
  }
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="text-center py-16 bg-[#f0f8ff]">
    <div class="inline-block relative">
      <h1 class="text-5xl font-bold bg-gradient-to-r from-[#07377e] to-[#35a5c2] bg-clip-text text-transparent mb-2">
        About us
      </h1>
      <hr class="border-0 h-[1px] bg-[#9e9e9e] w-full max-w-3xl mx-auto absolute bottom-[-5px] left-1/2 transform -translate-x-1/2" />
    </div>
    <p class="text-[#555] max-w-2xl mx-auto my-4 leading-6">
      <span class=".bg-gradient-title">RM DECA</span> is one of the 
      <span class=".bg-gradient-title">largest chapters</span> in all of Maryland. Our team is dedicated to providing members with the most comprehensive list of resources and training to ensure their <span class=".bg-gradient-title">success</span>. Last year, we had <span class=".bg-gradient-title">49 of our 90</span> DECA members at SCDC qualify for ICDC and travel to <span class=".bg-gradient-title">Anaheim, California</span>.
    </p>
    
  </section>

  <!-- Logo Carousel Section -->
  <section class="flex justify-center items-center py-16 bg-[#e6f2ff]">
    <Carousel images={images} />
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-[#f0f8ff]">
    <h2 class="text-center text-3xl font-semibold text-[#333] mb-8">Our Leadership</h2>
    
    <div class="flex flex-col gap-16">
        <!-- Presidents Section -->
        <div class="flex flex-col items-center gap-16">

          <!-- President 1 -->
          <div class="flex items-center gap-12 max-w-[1200px] mx-auto">
            <img src="https://path/to/president1-image.jpg" alt="President 1" class="w-full md:w-[500px] h-auto object-cover rounded-xl" />
            <div class="max-w-[500px]">
              <h3 class="text-2xl text-[#000000] mb-2">President 1</h3>
              <p class="text-[#555] mb-2">President Name</p>
              <p class="text-[#777]">Description about the president, their role, and achievements.</p>
            </div>
          </div>

          <!-- President 2 -->
          <div class="flex items-center gap-12 flex-col-reverse md:flex-row max-w-[1200px] mx-auto">
            <div class="max-w-[500px]">
              <h3 class="text-2xl text-[#000000] mb-2">President 2</h3>
              <p class="text-[#555] mb-2">President Name</p>
              <p class="text-[#777]">Description about the president, their role, and achievements.</p>
            </div>
            <img src="https://path/to/president2-image.jpg" alt="President 2" class="w-full md:w-[500px] h-auto object-cover rounded-xl" />
          </div>
        </div>

      <!-- Vice Presidents -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">

        <!-- Vice President 1 -->
        <div class="text-center bg-white rounded-xl shadow-lg p-4">
          <img src="https://path/to/vicepresident1-image.jpg" alt="Vice President 1" class="w-[120px] h-[120px] rounded-full mx-auto mb-4" />
          <h4 class="text-xl text-[#000000] mb-2">Vice President 1</h4>
          <p class="text-[#555]">Vice President Name</p>
          <p class="text-[#777]">Description about the VP, their role, and achievements.</p>
        </div>

        <!-- Vice President 2 --> 
        <div class="text-center bg-white rounded-xl shadow-lg p-4">
          <img src="https://path/to/vicepresident2-image.jpg" alt="Vice President 2" class="w-[120px] h-[120px] rounded-full mx-auto mb-4" />
          <h4 class="text-xl text-[#000000] mb-2">Vice President 2</h4>
          <p class="text-[#555]">Vice President Name</p>
          <p class="text-[#777]">Description about the VP, their role, and achievements.</p>
        </div>
        
        <!-- Vice President 3 -->
        <div class="text-center bg-white rounded-xl shadow-lg p-4">
          <img src="https://path/to/vicepresident3-image.jpg" alt="Vice President 3" class="w-[120px] h-[120px] rounded-full mx-auto mb-4" />
          <h4 class="text-xl text-[#000000] mb-2">Vice President 3</h4>
          <p class="text-[#555]">Vice President Name</p>
          <p class="text-[#777]">Description about the VP, their role, and achievements.</p>
        </div>

      </div>

      <!-- Additional Vice Presidents -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        
        <!-- Vice President 4 -->
        <div class="text-center bg-white rounded-xl shadow-lg p-4">
          <img src="https://path/to/vicepresident4-image.jpg" alt="Vice President 4" class="w-[120px] h-[120px] rounded-full mx-auto mb-4" />
          <h4 class="text-xl text-[#000000] mb-2">Vice President 4</h4>
          <p class="text-[#555]">Vice President Name</p>
          <p class="text-[#777]">Description about the VP, their role, and achievements.</p>
        </div>

        <!-- Vice President 5 -->
        <div class="text-center bg-white rounded-xl shadow-lg p-4">
          <img src="https://path/to/vicepresident5-image.jpg" alt="Vice President 5" class="w-[120px] h-[120px] rounded-full mx-auto mb-4" />
          <h4 class="text-xl text-[#000000] mb-2">Vice President 5</h4>
          <p class="text-[#555]">Vice President Name</p>
          <p class="text-[#777]">Description about the VP, their role, and achievements.</p>
        </div>

      </div>
    </div>
  </section>

</Layout>
