---
import Layout from '~/layouts/PageLayout.astro';
import '~/assets/styles/tailwind.css';

const metadata = {
  title: 'About',
};

const images = [
  { src: "/assets/images/IMG_1812.jpg", alt: "Logo 1" },
  { src: "/assets/images/IMG_7471.jpg", alt: "Logo 2" },
  { src: "/assets/images/IMG_5712.jpg", alt: "Logo 3" },
  { src: "/assets/images/IMG_4086.jpg", alt: "Logo 4" },
  { src: "/assets/images/IMG_4085.jpg", alt: "Logo 5" }
];

const presidents = [
  { name: "John Doe", title: "President", image: "/path/to/president1.jpg", description: "John is a visionary leader with a passion for entrepreneurship and innovation." },
  { name: "Jane Smith", title: "President", image: "/path/to/president2.jpg", description: "Jane brings years of experience in business management and strategic planning to our team." }
];

const vicePresidents = [
  { name: "Alice Johnson", title: "Vice President of Marketing", image: "/path/to/vp1.jpg", description: "Alice excels in digital marketing and brand development." },
  { name: "Bob Williams", title: "Vice President of Finance", image: "/path/to/vp2.jpg", description: "Bob is an expert in financial planning and analysis." },
  { name: "Charlie Brown", title: "Vice President of Operations", image: "/path/to/vp3.jpg", description: "Charlie ensures smooth day-to-day operations of our chapter." },
  { name: "Diana Davis", title: "Vice President of Events", image: "/path/to/vp4.jpg", description: "Diana orchestrates our chapter's engaging events and competitions." },
  { name: "Ethan Evans", title: "Vice President of Membership", image: "/path/to/vp5.jpg", description: "Ethan focuses on member recruitment and retention strategies." }
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="text-center py-16 bg-blue-50">
    <div class="inline-block relative">
      <h1 class="text-5xl font-bold bg-gradient-title from-blue-800 to-blue-400 bg-clip-text text-transparent mb-1">
        About Us
      </h1>
    <p class="text-[#555] max-w-2xl mx-auto my-4 leading-6">
      RM DECA is the <strong><span class="bg-gradient-title">#1 Chapter</span></strong> in all of Maryland. <br>
      Our team is dedicated to providing you with the best experiences and training. <br>
      <strong><span class="bg-gradient-title">Over 50% </span></strong> of DECA members at SCDC qualified for ICDC and traveled to 
      <strong><span class="bg-gradient-title">California</span></strong>.
    </p>
  </section>

  <!-- Logo Carousel Section -->
  <section class="py-16">
    <div class="swiper-container max-w-3xl mx-auto">
      <div class="swiper-wrapper">
        {images.map((image) => (
          <div class="swiper-slide">
            <img src={image.src} alt={image.alt} class="w-full h-auto object-cover" />
          </div>
        ))}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-[#f0f8ff]">
    <div class="container mx-auto px-4">
      <h2 class="text-center text-4xl font-bold text-[#07377e] mb-12">Our Leadership</h2>
      
      <!-- Presidents -->
      <div class="mb-16">
        <h3 class="text-center text-2xl font-semibold text-[#35a5c2] mb-8">Presidents</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {presidents.map((president) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105">
              <div class="md:flex">
                <div class="md:flex-shrink-0">
                  <img class="h-48 w-full object-cover md:w-48" src={president.image} alt={president.name} />
                </div>
                <div class="p-8">
                  <div class="uppercase tracking-wide text-sm text-[#07377e] font-semibold">{president.title}</div>
                  <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">{president.name}</a>
                  <p class="mt-2 text-gray-500">{president.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Vice Presidents -->
      <div>
        <h3 class="text-center text-2xl font-semibold text-[#35a5c2] mb-8">Vice Presidents</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {vicePresidents.map((vp) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105">
              <img class="h-48 w-full object-cover" src={vp.image} alt={vp.name} />
              <div class="p-6">
                <div class="uppercase tracking-wide text-sm text-[#07377e] font-semibold">{vp.title}</div>
                <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">{vp.name}</a>
                <p class="mt-2 text-gray-500">{vp.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.swiper-container', {
      loop: true,
      slidesPerView: 1,
      spaceBetween: 30,
      autoplay: {
        delay: 3000,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  });
</script>

<style>
  .swiper-container {
    width: 100%;
    height: 300px;
  }
  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
  .bg-gradient-title {
    @apply bg-gradient-to-r from-[#07377e] to-[#35a5c2] bg-clip-text text-transparent;
  }
</style>
