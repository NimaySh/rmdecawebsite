---
import Layout from '../layouts/PageLayout.astro';
import '../assets/styles/tailwind.css';
import { Image } from 'astro:assets';

// Import images
import IMG_1812 from '../assets/images/IMG_1812.jpg';
import IMG_7471 from '../assets/images/IMG_7471.jpeg';
import IMG_5712 from '../assets/images/IMG_5712.jpg';
import IMG_4086 from '../assets/images/IMG_4086.jpg';
import IMG_4085 from '../assets/images/IMG_4085.jpg';

import allisonHeadshot from '../assets/images/allison headshot.jpg';
import carolineHeadshot from '../assets/images/caroline headshot.jpg';
import daisyHeadshot from '../assets/images/daisy headshot.jpg';
import gloriaHeadshot from '../assets/images/gloria headshot.jpg';
import mariaHeadshot from '../assets/images/maria headshot.jpg';
import jenniferHeadshot from '../assets/images/jennifer headshot.jpeg';
import anyaHeadshot from '../assets/images/anya headshot.jpg';

const metadata = {
  title: 'About',
};

const images = [
  { src: IMG_1812, alt: "Photo 1", objectPosition: "center 20%" },
  { src: IMG_7471, alt: "Photo 2" },
  { src: IMG_5712, alt: "Photo 3", objectPosition: "center 34%" },
  { src: IMG_4086, alt: "Photo 4" },
  { src: IMG_4085, alt: "Photo 5" }
];

const presidents = [
  { name: "Allison Wong", title: "President", image: allisonHeadshot, description: "Allison is a visionary leader with a passion for entrepreneurship and innovation." },
  { name: "Caroline Zhou", title: "President", image: carolineHeadshot, description: "Caroline brings years of experience in business management and strategic planning to our team." }
];

const vicePresidents = [
  { name: "Daisy Wong", title: "Vice President of Training", image: daisyHeadshot, description: "Daisy excels in digital marketing and brand development.", objectPosition: "center 40%" },
  { name: "Gloria Lang", title: "Vice President of Public Relations", image: gloriaHeadshot, description: "Gloria is an expert in financial planning and analysis.", objectPosition: "center 30%" },
  { name: "Maria Yu", title: "Vice President of Public Relations ", image: mariaHeadshot, description: "Maria ensures smooth day-to-day operations of our chapter.", objectPosition: "center 30%" },
  { name: "Jennifer Wan", title: "Vice President of Outreach", image: jenniferHeadshot, description: "Jennifer orchestrates our chapter's engaging events and competitions.", objectPosition: "center 30%" },
  { name: "Anya Kleinman", title: "Vice President of Operations", image: anyaHeadshot, description: "Anya focuses on member recruitment and retention strategies.", objectPosition: "center 40%" }
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="text-center py-16 bg-blue-50">
    <div class="container mx-auto px-4">
      <div class="inline-block relative">
        <h1 class="text-5xl font-bold bg-gradient-title from-blue-800 to-blue-400 bg-clip-text text-transparent mb-1">
          About Us
        </h1>
      </div>
      <div class="flex flex-wrap justify-center gap-8 mt-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <span class="text-2xl font-bold bg-gradient-title">#1 Chapter</span>
          <p class="text-[#555] mt-2">in all of Maryland</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <span class="text-2xl font-bold bg-gradient-title">Over 50%</span>
          <p class="text-[#555] mt-2">qualified for ICDC</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <span class="text-2xl font-bold bg-gradient-title">BEST</span>
          <p class="text-[#555] mt-2">club at RM</p>
        </div>
      </div>
    </div>
  </section>

 <!-- Carousel Section -->
<section class="py-16">
  <div id="swiperContainer" class="swiper-container max-w-5xl mx-auto relative">
    <div class="swiper-wrapper">
      {
        images.map((image) => (
          <div class="swiper-slide aspect-[16/9]"> <!-- Fixed aspect ratio container -->
            <div class="relative w-full h-full">
              <Image 
                src={image.src}
                alt={image.alt}
                widths={[240, 540, 720, 1200]}
                sizes={`(max-width: 360px) 240px,
                        (max-width: 720px) 540px,
                        (max-width: 1200px) 720px,
                        1200px`}
                class="absolute inset-0 w-full h-full object-cover rounded-lg"
                style={image.objectPosition ? `object-position: ${image.objectPosition};` : ''}
              />
            </div>
          </div>
        ))
      }
    </div>
    <div class="swiper-button-prev !hidden md:!flex !w-12 !h-12 !bg-black/50 !rounded-full" />
    <div class="swiper-button-next !hidden md:!flex !w-12 !h-12 !bg-black/50 !rounded-full" />
    <div class="swiper-pagination !relative !bottom-0 mt-6" />
  </div>
</section>

  <!-- Team Section -->
  <section class="py-16 bg-[#f0f8ff]">
    <div class="container mx-auto px-4">
      <h2 class="text-center text-4xl font-bold text-[#07377e] mb-12">Our Leadership</h2>
      
     {/* Presidents Section */}
<div class="mb-16">
  <h3 class="text-center text-2xl font-semibold text-[#35a5c2] mb-8">Presidents</h3>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      presidents.map((president) => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
          <div class="flex flex-col md:flex-row">
            <div class="w-full md:w-56 h-64 relative">
              <Image 
                src={president.image}
                alt={president.name}
                widths={[320, 400]}
                sizes="(max-width: 768px) 400px, 320px"
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-6 flex-1">
              <div class="uppercase tracking-wide text-sm text-[#07377e] font-semibold">{president.title}</div>
              <h4 class="block mt-1 text-lg leading-tight font-medium text-black">{president.name}</h4>
              <p class="mt-2 text-gray-500">{president.description}</p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

{/* Vice Presidents Section */}
<div>
  <h3 class="text-center text-2xl font-semibold text-[#35a5c2] mb-8">Vice Presidents</h3>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center">
    {
      vicePresidents.map((vp) => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl max-w-sm w-full">
          <div class="h-64 relative overflow-hidden">
            <Image 
              src={vp.image}
              alt={vp.name}
              widths={[400]}
              sizes="400px"
              class="w-full h-full object-cover"
              style={vp.objectPosition ? `object-position: ${vp.objectPosition};` : ''}
            />
          </div>
          <div class="p-6">
            <div class="uppercase tracking-wide text-sm text-[#07377e] font-semibold">{vp.title}</div>
            <h4 class="block mt-1 text-lg leading-tight font-medium text-black">{vp.name}</h4>
            <p class="mt-2 text-gray-500">{vp.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
  </section>
</Layout>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

<style>
  .swiper-container {
    width: 100%;
  }
  
  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  
  .bg-gradient-title {
    @apply bg-gradient-to-r from-[#07377e] to-[#35a5c2] bg-clip-text text-transparent;
  }
  
  .swiper-button-prev,
  .swiper-button-next {
    color: white;
    transition: all 0.3s ease;
  }
  
  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background-color: rgba(0, 0, 0, 0.7);
  }
  
  .swiper-pagination-bullet {
    width: 10px;
    height: 10px;
    background: #07377e;
    opacity: 0.5;
    transition: all 0.3s ease;
  }
  
  .swiper-pagination-bullet-active {
    opacity: 1;
    width: 20px;
    border-radius: 5px;
  }
</style>

<script>
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.esm.browser.min.js';

  function initSwiper() {
    new Swiper('#swiperContainer', {
      loop: true,
      slidesPerView: 1,
      spaceBetween: 0,
      effect: 'fade',
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        dynamicBullets: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  }

  document.addEventListener('DOMContentLoaded', initSwiper);
  document.addEventListener('astro:page-load', initSwiper);
</script>