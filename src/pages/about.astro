---
import Layout from '../layouts/PageLayout.astro';
import '../assets/styles/tailwind.css';
import { Image } from 'astro:assets';

// Import images
import IMG_1812 from '../public/imgs/IMG_1812.jpg';
import IMG_7471 from '../public/imgs/IMG_7471.jpg';
import IMG_5712 from '../public/imgs/IMG_5712.jpg';
import IMG_4086 from '../public/imgs/IMG_4086.jpg';
import IMG_4085 from '../public/imgs/IMG_4085.jpg';

import allisonHeadshot from '../public/imgs/allison headshot.jpg';
import carolineHeadshot from '../public/imgs/caroline headshot.jpg';
import daisyHeadshot from '../public/imgs/daisy headshot.jpg';
import gloriaHeadshot from '../public/imgs/gloria headshot.jpg';
import mariaHeadshot from '../public/imgs/maria headshot.jpg';
import jenniferHeadshot from '../public/imgs/jennifer headshot.jpg';
import anyaHeadshot from '../public/imgs/anya headshot.jpg';

const metadata = {
  title: 'About',
};

const images = [
  { src: IMG_1812, alt: "Photo 1" },
  { src: IMG_7471, alt: "Photo 2" },
  { src: IMG_5712, alt: "Photo 3" },
  { src: IMG_4086, alt: "Photo 4" },
  { src: IMG_4085, alt: "Photo 5" }
];

const presidents = [
  { name: "Allison Wong", title: "President", image: allisonHeadshot, description: "Allison is a visionary leader with a passion for entrepreneurship and innovation." },
  { name: "Caroline Zhou", title: "President", image: carolineHeadshot, description: "Caroline brings years of experience in business management and strategic planning to our team." }
];

const vicePresidents = [
  { name: "Daisy Wong", title: "Vice President of Training", image: daisyHeadshot, description: "Daisy excels in digital marketing and brand development." },
  { name: "Gloria Lang", title: "Vice President of Public Relations", image: gloriaHeadshot, description: "Gloria is an expert in financial planning and analysis." },
  { name: "Maria Yu", title: "Vice President of Public Relations ", image: mariaHeadshot, description: "Maria ensures smooth day-to-day operations of our chapter." },
  { name: "Jennifer Wan", title: "Vice President of Outreach", image: jenniferHeadshot, description: "Jennifer orchestrates our chapter's engaging events and competitions." },
  { name: "Anya Kleinman", title: "Vice President of Operations", image: anyaHeadshot, description: "Anya focuses on member recruitment and retention strategies." }
];
---
<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section class="text-center py-16 bg-[#f0f8ff]">
    <div class="inline-block relative">
      <h1 class="text-5xl font-bold bg-gradient-to-r from-[#07377e] to-[#35a5c2] bg-clip-text text-transparent mb-2">
        About us
      </h1>
      <hr class="border-0 h-[1px] bg-[#9e9e9e] w-full max-w-3xl mx-auto absolute bottom-[-5px] left-1/2 transform -translate-x-1/2" />
    </div>
    <p class="text-[#555] max-w-2xl mx-auto my-4 leading-6">
      RM DECA is one of the <strong><span class="bg-gradient-title">largest chapters</span></strong> in all of Maryland. 
      Our team is dedicated to providing members with the most comprehensive list of resources and training to ensure their 
      <strong><span class="bg-gradient-title">success</span></strong>. Last year, we had 
      <strong><span class="bg-gradient-title">49 of our 90</span></strong> DECA members at SCDC qualify for ICDC and travel to 
      <strong><span class="bg-gradient-title">Anaheim, California</span></strong>.
    </p>
  </section>

  <!-- Logo Carousel Section -->
  <section class="py-16 bg-[#e6f2ff]">
    <div class="swiper-container max-w-3xl mx-auto">
      <div class="swiper-wrapper">
        {images.map((image) => (
          <div class="swiper-slide">
            <Image src={image.src} alt={image.alt} width={800} height={600} class="w-full h-auto object-cover" />
          </div>
        ))}
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 bg-[#f0f8ff]">
    <div class="container mx-auto px-4">
      <h2 class="text-center text-4xl font-bold text-[#07377e] mb-12">Our Leadership</h2>
      
      <!-- Presidents -->
      <div class="mb-16">
        <h3 class="text-center text-2xl font-semibold text-[#35a5c2] mb-8">Presidents</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {presidents.map((president) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105">
              <div class="md:flex">
                <div class="md:flex-shrink-0">
                  <Image class="h-48 w-full object-cover md:w-48" src={president.image} alt={president.name} width={200} height={200} />
                </div>
                <div class="p-8">
                  <div class="uppercase tracking-wide text-sm text-[#07377e] font-semibold">{president.title}</div>
                  <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">{president.name}</a>
                  <p class="mt-2 text-gray-500">{president.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Vice Presidents -->
      <div>
        <h3 class="text-center text-2xl font-semibold text-[#35a5c2] mb-8">Vice Presidents</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {vicePresidents.map((vp) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105">
              <Image class="h-48 w-full object-cover" src={vp.image} alt={vp.name} width={300} height={200} />
              <div class="p-6">
                <div class="uppercase tracking-wide text-sm text-[#07377e] font-semibold">{vp.title}</div>
                <a href="#" class="block mt-1 text-lg leading-tight font-medium text-black hover:underline">{vp.name}</a>
                <p class="mt-2 text-gray-500">{vp.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.swiper-container', {
      loop: true,
      slidesPerView: 1,
      spaceBetween: 30,
      autoplay: {
        delay: 3000,
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  });
</script>

<style>
  .swiper-container {
    width: 100%;
    height: 300px;
  }
  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
  .bg-gradient-title {
    @apply bg-gradient-to-r from-[#07377e] to-[#35a5c2] bg-clip-text text-transparent;
  }
</style>