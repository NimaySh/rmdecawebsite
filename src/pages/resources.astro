---
// PageLayout.astro
import Layout from '~/layouts/PageLayout.astro'; // Adjust the path based on your project structure
import Sidebar from 'src/components/ui/FilterSidebar.astro';

const metadata = {
  title: 'About',
};

const cards = [
  { image: '/path/to/image1.jpg', title: '2016 Finance Cluster Exam', subtitle: 'Card Subtitle 1', link: 'https://1.cdn.edl.io/lrfIp7DYQLuPyGh7xoGw2Dr3ZYs5r0vEnUL3j2kvZe4dTVOR.pdf' },
  { image: '/path/to/image2.jpg', title: '2020 Entrepreneurship Cluster Exam', subtitle: 'Card Subtitle 2', link: 'https://cdn.prod.website-files.com/635c470cc81318fc3e9c1e0e/65df4655119eda9d94bed97e_HS_Entrepreneurship_Sample_Exam_24.pdf' },
  { image: '/path/to/image3.jpg', title: 'ENT Sample Roleplay', subtitle: 'Card Subtitle 3', link: 'https://example.com/sample-roleplay' },
  // Add more cards as needed
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <section style="text-align: center; padding: 4rem 2rem; background-color: #f0f8ff;">
    <!-- ...hero content -->
  </section>

  <div style="display: flex; padding: 4rem 2rem;">
    <Sidebar />

    <!-- Cards Section -->
    <section style="flex: 1; display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; padding-left: 2rem;">
      {cards.map(card => (
        <a href={card.link} target="_blank" rel="noopener noreferrer" style="text-decoration: none; color: inherit;">
          <div style="background-color: #fff; border-radius: 15px; box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); overflow: hidden; transition: transform 0.2s; cursor: pointer;">
            <img src={card.image} alt={card.title} style="width: 100%; height: auto; border-top-left-radius: 15px; border-top-right-radius: 15px;">
            <div style="padding: 1rem;">
              <h2 style="font-size: 1.5rem; font-weight: bold; margin-bottom: 0.5rem;">{card.title}</h2>
              <p style="font-size: 1rem; color: #555;">{card.subtitle}</p>
            </div>
          </div>
        </a>
      ))}
    </section>
  </div>
</Layout>
