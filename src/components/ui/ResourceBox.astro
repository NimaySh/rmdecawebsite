---
// src/components/ui/ResourceBox.astro
const { type, cluster, name, link } = Astro.props;

// Define cluster colors with a fallback color
const clusterColors = {
  Finance: 'bg-blue-500',
  'Business Admin': 'bg-green-500',
  Entrepreneurship: 'bg-yellow-500',
  'Hospitality & Tourism': 'bg-orange-500',
  Marketing: 'bg-purple-500',
  'Personal/Financial Literacy': 'bg-pink-500',
};

// Default color if the cluster is not found
const clusterColor = clusterColors[cluster] || 'bg-gray-300';
---

<a href={link} class="block bg-white shadow-md rounded-lg overflow-hidden" target="_blank" rel="noopener noreferrer">
  <div class={`h-16 ${clusterColor} flex items-center justify-center`}>
    <i class="fas fa-book text-white text-2xl"></i>
  </div>
  <div class="p-4">
    <h3 class="text-gray-800 font-bold">{name}</h3>
    <p class="text-gray-600">{type}</p>
  </div>
</a>
