---
// src/components/ui/FilterSidebar.astro

const filterOptions = ['Sample Roleplay', 'Practice Test', 'Quizlet', 'Other'];
let selectedFilters = [];

function toggleFilter(filter) {
  if (selectedFilters.includes(filter)) {
    selectedFilters = selectedFilters.filter((f) => f !== filter);
  } else {
    selectedFilters = [...selectedFilters, filter];
  }
}
---

<div class="bg-white shadow-md rounded-lg p-6">
  <h3 class="text-lg font-bold mb-4">Type</h3>
  <div class="space-y-2">
    {filterOptions.map((filter) => (
      <div class="flex items-center" key={filter}>
        <input
          type="checkbox"
          class="mr-2 text-blue-500 focus:ring-blue-500"
          checked={selectedFilters.includes(filter)}
          on:change={() => toggleFilter(filter)}
        />
        <label class="text-gray-700">{filter}</label>
      </div>
    ))}
  </div>
</div>
